<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.composenavegacionentrepantallas"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_EMAIL" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_alot_metal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_alot_metal"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeNavegacionEntrePantallas"
        tools:targetApi="31">

        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:stateNotNeeded="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            tools:replace="android:theme, android:screenOrientation" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.ComposeNavegacionEntrePantallas">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
